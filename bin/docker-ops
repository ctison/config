#!/bin/bash
umask 0077
set -euo pipefail
shopt -s nullglob

if [ $# = 0 ]; then
	cat << EOF
Usage:
	docker-ops [DOCKER_RUN_OPTIONS] IMAGE [ARGS]
Example:
	docker-ops --security-opt seccomp:unconfined ubuntu bash
EOF
	exit
fi

NAME=$(echo "${PWD##*/}" | tr ' ' '-')

set -x
exec docker run -it --name "${NAME}" --hostname "${NAME}" \
	-v "${PWD}":/"${NAME}":delegated --workdir "/${NAME}" "$@"
