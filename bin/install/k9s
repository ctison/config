#!/bin/sh
umask 0077
VERSION='0.9.3'
set -ex

curl -LO https://github.com/derailed/k9s/releases/download/${VERSION}/k9s_${VERSION}_Linux_x86_64.tar.gz
tar --no-same-o --no-same-p -C /usr/local/bin/ -xzf k9s_${VERSION}_Linux_x86_64.tar.gz k9s
chmod 500 /usr/local/bin/k9s
rm k9s_${VERSION}_Linux_x86_64.tar.gz