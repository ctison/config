#!/bin/bash
umask 0077
shopt -s nullglob
set -euo pipefail

VERSION=$(curl -sS https://api.github.com/repos/timberio/vector/releases/latest | jq -r .tag_name)
echo "VERSION=$VERSION"
if [ $# = 1 ] && [ "$1" = 'version' ]; then exit 0; fi
set -x
curl -fLO https://github.com/timberio/vector/releases/download/"$VERSION"/vector-"${VERSION#v}"-"$(dpkg --print-architecture)".deb
dpkg -i vector-"${VERSION#v}"-"$(dpkg --print-architecture)".deb || true # ignore systemd no present: Failed to connect to bus: Host is down
rm vector-"${VERSION#v}"-"$(dpkg --print-architecture)".deb
