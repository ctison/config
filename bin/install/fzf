#!/bin/bash
umask 0077
shopt -s nullglob
set -euxo pipefail

VERSION=$(curl -s https://api.github.com/repos/junegunn/fzf-bin/releases/latest | jq -r .tag_name)
curl -LO https://github.com/junegunn/fzf-bin/releases/download/"$VERSION"/fzf-"$VERSION"-linux_"$(dpkg --print-architecture)".tgz
tar --no-same-{o,p} -C /usr/local/bin/ -xf fzf-"$VERSION"-linux_"$(dpkg --print-architecture)".tgz fzf
chmod 500 /usr/local/bin/fzf
rm fzf-"$VERSION"-linux_"$(dpkg --print-architecture)".tgz
