#!/bin/bash
umask 0077
shopt -s nullglob
set -euxo pipefail

VERSION=$(curl -s https://api.github.com/repos/ogham/exa/releases/latest | jq -r .tag_name)
curl -LO https://github.com/ogham/exa/releases/download/"$VERSION"/exa-linux-x86_64-"$VERSION".zip
unzip -j exa-linux-x86_64-"$VERSION".zip bin/exa -d /usr/local/bin/
chmod 500 /usr/local/bin/exa
rm exa-linux-x86_64-"$VERSION".zip
