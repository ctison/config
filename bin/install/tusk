#!/bin/bash
umask 0077
shopt -s nullglob
set -euxo pipefail

VERSION=$(curl -s https://api.github.com/repos/rliebz/tusk/releases/latest | jq -r .tag_name | sed s/^v//)
curl -LO https://github.com/rliebz/tusk/releases/download/v"$VERSION"/tusk_"$VERSION"_linux_"$(dpkg --print-architecture)".tar.gz
tar --no-same-{o,p} -C /usr/local/bin/ -xzf tusk_"$VERSION"_linux_"$(dpkg --print-architecture)".tar.gz tusk
rm tusk_"$VERSION"_linux_"$(dpkg --print-architecture)".tar.gz
