#!/bin/bash
umask 0077
shopt -s nullglob
set -euxo pipefail

curl -LO https://github.com/jetstack/cert-manager/releases/latest/download/kubectl-cert_manager-linux-"$(dpkg --print-architecture)".tar.gz
tar --no-same-{o,p} -C /usr/local/bin/ -xf kubectl-cert_manager-linux-"$(dpkg --print-architecture)".tar.gz kubectl-cert_manager
chmod 500 /usr/local/bin/kubectl-cert_manager
rm kubectl-cert_manager-linux-"$(dpkg --print-architecture)".tar.gz
