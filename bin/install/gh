#!/bin/bash
umask 0077
shopt -s nullglob
set -euxo pipefail

VERSION=$(curl -s https://api.github.com/repos/cli/cli/releases/latest | jq -r .tag_name | sed s/^v//)
curl -LO https://github.com/cli/cli/releases/download/v"$VERSION"/gh_"$VERSION"_linux_"$(dpkg --print-architecture)".deb
dpkg -i gh_"$VERSION"_linux_"$(dpkg --print-architecture)".deb
rm gh_"$VERSION"_linux_"$(dpkg --print-architecture)".deb
