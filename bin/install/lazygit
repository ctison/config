#!/bin/bash
umask 0077
shopt -s nullglob
set -euo pipefail

VERSION=$(curl -fsS https://api.github.com/repos/jesseduffield/lazygit/releases/latest | jq -r .tag_name | sed s/^v//)
echo "VERSION=$VERSION"
if [ $# = 1 ] && [ "$1" = 'version' ]; then exit 0; fi
set -x
curl -fsSLO https://github.com/jesseduffield/lazygit/releases/download/v"$VERSION"/lazygit_"$VERSION"_Linux_x86_64.tar.gz
tar --no-same-{o,p} -C /usr/local/bin/ -xf lazygit_"$VERSION"_Linux_x86_64.tar.gz lazygit
rm lazygit_"$VERSION"_Linux_x86_64.tar.gz
chmod 500 /usr/local/bin/lazygit
ln -s /usr/local/bin/lazygit /usr/local/bin/lg
