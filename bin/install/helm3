#!/bin/sh
umask 0077
VERSION='3.0.0-rc.2'
set -ex

curl -LO https://get.helm.sh/helm-v${VERSION}-linux-amd64.tar.gz
tar --no-same-o --no-same-p -xzf helm-v${VERSION}-linux-amd64.tar.gz -C /usr/local/bin/ linux-amd64/helm --strip-c=1
chmod 500 /usr/local/bin/helm
mv /usr/local/bin/helm /usr/local/bin/helm3
rm helm-v${VERSION}-linux-amd64.tar.gz