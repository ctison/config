#!/bin/bash
umask 0077
shopt -s nullglob
set -euo pipefail

VERSION=$(curl -sS https://api.github.com/repos/kubernetes-sigs/multi-tenancy/releases/latest | jq -r .tag_name | sed s/^v//)
echo "VERSION=$VERSION"
if [ $# = 1 ] && [ "$1" = 'version' ]; then exit 0; fi
set -x

curl -Lo /usr/local/bin/kubectl-hns https://github.com/kubernetes-sigs/multi-tenancy/releases/download/"$VERSION"/kubectl-hns_linux_"$(dpkg --print-architecture)"
chmod 500 /usr/local/bin/kubectl-hns
