#!/bin/bash
umask 0077
shopt -s nullglob
set -euxo pipefail

VERSION=$(curl -s https://api.github.com/repos/ClementTsang/bottom/releases/latest | jq -r .tag_name | sed s/^v//)
curl -LO https://github.com/ClementTsang/bottom/releases/download/"$VERSION"/bottom_"$VERSION"_"$(dpkg --print-architecture)".deb
dpkg -i bottom_"$VERSION"_"$(dpkg --print-architecture)".deb
rm bottom_"$VERSION"_"$(dpkg --print-architecture)".deb
