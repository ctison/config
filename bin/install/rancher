#!/bin/bash
umask 0077
shopt -s nullglob
set -euxo pipefail

VERSION=$(curl -s https://api.github.com/repos/rancher/cli/releases/latest | jq -r .tag_name)
curl -LO https://github.com/rancher/cli/releases/download/"$VERSION"/rancher-linux-"$(dpkg --print-architecture)"-"$VERSION".tar.xz
tar --no-same-{o,p} -C /usr/local/bin/ --strip=2 -xf rancher-linux-"$(dpkg --print-architecture)"-"$VERSION".tar.xz ./rancher-"$VERSION"/rancher
rm rancher-linux-"$(dpkg --print-architecture)"-"$VERSION".tar.xz
chmod 500 /usr/local/bin/rancher
