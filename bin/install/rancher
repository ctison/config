#!/bin/sh

set -ex
umask 0077

RANCHER_VERSION='v2.3.0'

curl -LO https://github.com/rancher/cli/releases/download/${RANCHER_VERSION}/rancher-linux-amd64-${RANCHER_VERSION}.tar.xz
tar --no-same-o --no-same-p -C /usr/local/bin/ --strip=2 -xf rancher-linux-amd64-${RANCHER_VERSION}.tar.xz ./rancher-${RANCHER_VERSION}/rancher
rm rancher-linux-amd64-${RANCHER_VERSION}.tar.xz
chmod 500 /usr/local/bin/rancher