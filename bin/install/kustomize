#!/bin/bash
umask 0077
VERSION=$(curl -s https://api.github.com/repos/kubernetes-sigs/kustomize/releases/latest | jq -r .tag_name | sed s/^v//)
set -eux

curl -LO https://github.com/kubernetes-sigs/kustomize/releases/download/kustomize/v"$VERSION"/kustomize_v"$VERSION"_linux_amd64.tar.gz
tar --no-same-{o,p} -C /usr/local/bin/ -xf kustomize_v"$VERSION"_linux_amd64.tar.gz kustomize
chmod 500 /usr/local/bin/kustomize
rm kustomize_v"$VERSION"_linux_amd64.tar.gz