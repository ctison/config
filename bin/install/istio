#!/bin/sh
umask 0077
VERSION='1.3.4'
set -ex

curl -LO https://github.com/istio/istio/releases/download/${VERSION}/istio-${VERSION}-linux.tar.gz
tar --no-same-o --no-same-p -xzf istio-${VERSION}-linux.tar.gz -C /usr/local/
rm -- istio-${VERSION}-linux.tar.gz
ln -s /usr/local/istio-${VERSION} /usr/local/istio
ln -s /usr/local/istio/bin/istioctl /usr/local/bin/