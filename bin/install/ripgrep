#!/bin/bash
umask 0077
shopt -s nullglob
set -euxo pipefail

VERSION=$(curl -s https://api.github.com/repos/BurntSushi/ripgrep/releases/latest | jq -r .tag_name | sed s/^v//)

TMP="$(mktemp -d)"

case "$(uname -m)" in
x86_64)
  curl -fsSLo "$TMP/ripgrep.deb" --tlsv1.2 --proto '=https' https://github.com/BurntSushi/ripgrep/releases/download/"$VERSION"/ripgrep_"$VERSION"_amd64.deb
  dpkg -i ripgrep_"$VERSION"_"$(dpkg --print-architecture)".deb
  ;;
aarch64)
  echo "Not supported"
  ;;

esac

rm -rf -- "$TMP"
