#!/bin/bash
umask 0077
shopt -s nullglob
set -euo pipefail

VERSION=$(curl -sS https://api.github.com/repos/snyk/snyk/releases/latest | jq -r .tag_name)
echo "VERSION=$VERSION"
if [ $# = 1 ] && [ "$1" = 'version' ]; then exit 0; fi
set -x
curl -fLo /usr/local/bin/snyk https://github.com/snyk/snyk/releases/download/"$VERSION"/snyk-linux
chmod 500 /usr/local/bin/snyk