#!/bin/bash
umask 0077
shopt -s nullglob
set -euo pipefail

VERSION=$(curl -sS https://api.github.com/repos/coredns/coredns/releases/latest | jq -r .tag_name | sed s/^v//)
echo "VERSION=$VERSION"
if [ $# = 1 ] && [ "$1" = 'version' ]; then exit 0; fi
set -x
curl -LO https://github.com/coredns/coredns/releases/download/v"$VERSION"/coredns_"$VERSION"_linux_"$(dpkg --print-architecture)".tgz
tar --no-same-{o,p} -C /usr/local/bin/ -xf coredns_"$VERSION"_linux_"$(dpkg --print-architecture)".tgz coredns
chmod 500 /usr/local/bin/coredns
rm coredns_"$VERSION"_linux_"$(dpkg --print-architecture)".tgz
