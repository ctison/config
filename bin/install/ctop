#!/bin/bash
umask 0077
shopt -s nullglob
set -euo pipefail

VERSION=$(curl -fsS https://api.github.com/repos/bcicen/ctop/releases/latest | jq -r .tag_name | sed s/^v//)
echo "VERSION=$VERSION"
if [ $# = 1 ] && [ "$1" = 'version' ]; then exit 0; fi
set -x
curl -fsSLo /usr/local/bin/ctop https://github.com/bcicen/ctop/releases/download/v"$VERSION"/ctop-"$VERSION"-linux-"$(dpkg --print-architecture)"
chmod 500 /usr/local/bin/ctop
