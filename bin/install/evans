#!/bin/bash
umask 0077
shopt -s nullglob
set -euxo pipefail

curl -LO https://github.com/ktr0731/evans/releases/latest/download/evans_linux_"$(dpkg --print-architecture)".tar.gz
tar --no-same-{o,p} -C /usr/local/bin/ -xzf evans_linux_"$(dpkg --print-architecture)".tar.gz evans
chmod 500 /usr/local/bin/evans
rm evans_linux_"$(dpkg --print-architecture)".tar.gz
