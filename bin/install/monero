#!/bin/sh
umask 0077
# 0.15.0.0 ?
VERSION='0.14.0.0'
set -ex

# Github URL
# curl -LO https://github.com/monero-project/monero/releases/download/v${VERSION}/monero-linux-x64-v${VERSION}.tar.bz2

curl -LO https://downloads.getmonero.org/cli/monero-linux-x64-v${VERSION}.tar.bz2
tar --no-same-o --no-same-p -C /usr/local/bin/ -xf monero-linux-x64-v${VERSION}.tar.bz2 --wildcards 'monero-x86_64-linux-gnu/monero-wallet-*' --strip=1
chmod 500 /usr/local/bin/monero-wallet-*

# curl -LO https://downloads.getmonero.org/blockchain.raw # = 55G