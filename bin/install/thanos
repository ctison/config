#!/bin/bash
umask 0077
shopt -s nullglob
set -euo pipefail

VERSION=$(curl -sS https://api.github.com/repos/thanos-io/thanos/releases/latest | jq -r .tag_name | sed s/^v//)
echo "VERSION=$VERSION"
if [ $# = 1 ] && [ "$1" = 'version' ]; then exit 0; fi
set -x
curl -LOC- https://github.com/thanos-io/thanos/releases/download/v"$VERSION"/thanos-"$VERSION".linux-"$(dpkg --print-architecture)".tar.gz
tar --no-same-{o,p} -C /usr/local/bin/ --strip=1 -xf thanos-"$VERSION".linux-"$(dpkg --print-architecture)".tar.gz thanos-"$VERSION".linux-"$(dpkg --print-architecture)"/thanos
chmod 500 /usr/local/bin/thanos
rm thanos-"$VERSION".linux-"$(dpkg --print-architecture)".tar.gz
