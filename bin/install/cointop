#!/bin/bash
umask 0077
shopt -s nullglob
set -euo pipefail

VERSION=$(curl -sS https://api.github.com/repos/miguelmota/cointop/releases/latest | jq -r .tag_name)
echo "VERSION=$VERSION"
if [ $# = 1 ] && [ "$1" = 'version' ]; then exit 0; fi
set -x
curl -fLO https://github.com/miguelmota/cointop/releases/download/"$VERSION"/cointop_"${VERSION#v}"_linux_"$(dpkg --print-architecture)".tar.gz
tar --no-same-{o,p} -C /usr/local/bin/ -xf cointop_"${VERSION#v}"_linux_"$(dpkg --print-architecture)".tar.gz cointop
chmod 500 /usr/local/bin/cointop
rm cointop_"${VERSION#v}"_linux_"$(dpkg --print-architecture)".tar.gz
