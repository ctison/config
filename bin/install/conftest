#!/bin/bash
umask 0077
shopt -s nullglob
set -euxo pipefail

VERSION=$(curl -s https://api.github.com/repos/open-policy-agent/conftest/releases/latest | jq -r .tag_name | sed s/^v//)
curl -LO https://github.com/open-policy-agent/conftest/releases/download/v"$VERSION"/conftest_"$VERSION"_linux_amd64.deb
dpkg -i conftest_"$VERSION"_linux_amd64.deb
rm conftest_"$VERSION"_linux_amd64.deb