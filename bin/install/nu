#!/bin/sh
umask 0077
VERSION='0_12_0'
set -ex

curl -LO "https://github.com/nushell/nushell/releases/download/$(echo $VERSION | tr _ .)/nu_${VERSION}_linux.tar.gz"
tar --no-same-o --no-same-p -C /usr/local/bin/ -xf nu_${VERSION}_linux.tar.gz --wildcards "nu_${VERSION}_linux/nushell_${VERSION}/nu*" --strip=2
chmod 500 /usr/local/bin/nu*
rm nu_${VERSION}_linux.tar.gz