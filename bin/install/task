#!/bin/bash
umask 0077
shopt -s nullglob
set -euxo pipefail

curl -LO https://github.com/go-task/task/releases/latest/download/task_linux_"$(dpkg --print-architecture)".tar.gz
tar --no-same-{o,p} -C /usr/local/bin/ -xf task_linux_"$(dpkg --print-architecture)".tar.gz task
chmod 500 /usr/local/bin/task
rm task_linux_"$(dpkg --print-architecture)".tar.gz
