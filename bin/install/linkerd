#!/bin/bash
umask 0077
set -euxo pipefail
shopt -s nullglob

VERSION=$(curl -s https://api.github.com/repos/linkerd/linkerd2/releases/latest | jq -r .tag_name | sed s/^v//)
curl -Lo /usr/local/bin/linkerd https://github.com/linkerd/linkerd2/releases/download/"$VERSION"/linkerd2-cli-"$VERSION"-linux
chmod 500 /usr/local/bin/linkerd