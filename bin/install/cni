#!/bin/bash
umask 0077
shopt -s nullglob
set -euo pipefail

VERSION=$(curl -sS https://api.github.com/repos/containernetworking/plugins/releases/latest | jq -r .tag_name | sed s/^v//)
echo "VERSION=$VERSION"
if [ $# = 1 ] && [ "$1" = 'version' ]; then exit 0; fi
set -x
curl -LO https://github.com/containernetworking/plugins/releases/download/v"$VERSION"/cni-plugins-linux-amd64-v"$VERSION".tgz