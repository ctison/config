#!/bin/bash
umask 0077
shopt -s nullglob
set -euo pipefail

VERSION=$(curl -sS https://api.github.com/repos/prometheus/node_exporter/releases/latest | jq -r .tag_name | sed s/^v//)
echo "VERSION=$VERSION"
if [ $# = 1 ] && [ "$1" = 'version' ]; then exit 0; fi
set -x
curl -LOC- https://github.com/prometheus/node_exporter/releases/download/v"$VERSION"/node_exporter-"$VERSION".linux-"$(dpkg --print-architecture)".tar.gz
tar --no-same-{o,p} -C /usr/local/bin/ --strip=1 -xf node_exporter-"$VERSION".linux-"$(dpkg --print-architecture)".tar.gz node_exporter-"$VERSION".linux-"$(dpkg --print-architecture)"/node_exporter
chmod 500 /usr/local/bin/node_exporter
rm node_exporter-"$VERSION".linux-"$(dpkg --print-architecture)".tar.gz
