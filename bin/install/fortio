#!/bin/bash
umask 0077
shopt -s nullglob
set -euxo pipefail

VERSION=$(curl -s https://api.github.com/repos/fortio/fortio/releases/latest | jq -r .tag_name | sed s/^v//)
curl -LO https://github.com/fortio/fortio/releases/download/v"$VERSION"/fortio_"$VERSION"-1_"$(dpkg --print-architecture)".deb
dpkg -i fortio_"$VERSION"-1_"$(dpkg --print-architecture)".deb
rm fortio_"$VERSION"-1_"$(dpkg --print-architecture)".deb
