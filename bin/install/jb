#!/bin/bash
umask 0077
shopt -s nullglob
set -euo pipefail

if [ $# = 1 ] && [ "$1" = 'version' ]; then
  VERSION=$(curl -sS https://api.github.com/repos/jsonnet-bundler/jsonnet-bundler/releases/latest | jq -r .tag_name | sed s/^v//)
  echo "VERSION=$VERSION"
  exit 0
fi

set -x
curl -Lo /usr/local/bin/jb https://github.com/jsonnet-bundler/jsonnet-bundler/releases/latest/download/jb-linux-"$(dpkg --print-architecture)"
chmod 500 /usr/local/bin/jb
