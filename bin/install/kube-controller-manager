#!/bin/bash
umask 0077
shopt -s nullglob
set -euo pipefail

VERSION=$(curl -sS https://api.github.com/repos/user/repo/releases/latest | jq -r .tag_name | sed s/^v//)
echo "VERSION=$VERSION"
if [ $# = 1 ] && [ "$1" = 'version' ]; then exit 0; fi
set -x
curl -Lo /usr/local/bin/kube-controller-manager https://storage.googleapis.com/kubernetes-release/release/"$VERSION"/bin/linux/amd64/kube-controller-manager
chmod 500 /usr/local/bin/kube-controller-manager