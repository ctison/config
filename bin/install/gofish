#!/bin/bash
umask 0077
shopt -s nullglob
set -euxo pipefail

VERSION=$(curl -s https://api.github.com/repos/fishworks/gofish/releases/latest | jq -r .tag_name | sed s/^v//)
curl -LO https://gofi.sh/releases/gofish-v"$VERSION"-linux-"$(dpkg --print-architecture)".tar.gz
tar --no-same-{o,p} -C /usr/local/bin/ --strip=1 -xf gofish-v"$VERSION"-linux-"$(dpkg --print-architecture)".tar.gz linux-"$(dpkg --print-architecture)"/gofish
chmod 500 /usr/local/bin/gofish
rm gofish-v"$VERSION"-linux-"$(dpkg --print-architecture)".tar.gz
