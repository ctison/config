#!/bin/sh

set -ex
umask 0077

GOLANG_VERSION='1.13.3'

curl -LO https://dl.google.com/go/go${GOLANG_VERSION}.linux-amd64.tar.gz
tar --no-same-o --no-same-p -C /usr/local -xzf go${GOLANG_VERSION}.linux-amd64.tar.gz
rm go${GOLANG_VERSION}.linux-amd64.tar.gz
ln -st /usr/local/bin /usr/local/go/bin/*

go get -u -v golang.org/x/tools/cmd/goimports