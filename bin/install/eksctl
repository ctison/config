#!/bin/bash
umask 0077
shopt -s nullglob
set -euxo pipefail

curl -LO https://github.com/weaveworks/eksctl/releases/download/latest_release/eksctl_Linux_"$(dpkg --print-architecture)".tar.gz
tar --no-same-{o,p} -C /usr/local/bin/ -xzf eksctl_Linux_"$(dpkg --print-architecture)".tar.gz
rm eksctl_Linux_"$(dpkg --print-architecture)".tar.gz
chmod 500 /usr/local/bin/eksctl
