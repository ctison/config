#!/bin/bash
umask 0077
shopt -s nullglob
set -euo pipefail

VERSION=$(curl -sS https://api.github.com/repos/corneliusweig/rakkess/releases/latest | jq -r .tag_name)
echo "VERSION=$VERSION"
if [ $# = 1 ] && [ "$1" = 'version' ]; then exit 0; fi
set -x
curl -fLO https://github.com/corneliusweig/rakkess/releases/download/"$VERSION"/access-matrix-"$(dpkg --print-architecture)"-linux.tar.gz
curl -fLO https://github.com/corneliusweig/rakkess/releases/download/"$VERSION"/rakkess-"$(dpkg --print-architecture)"-linux.tar.gz
tar --no-same-{o,p} -Oxf access-matrix-"$(dpkg --print-architecture)"-linux.tar.gz access-matrix-"$(dpkg --print-architecture)"-linux >/usr/local/bin/access-matrix
tar --no-same-{o,p} -Oxf rakkess-"$(dpkg --print-architecture)"-linux.tar.gz rakkess-"$(dpkg --print-architecture)"-linux >/usr/local/bin/rakkess
chmod 500 /usr/local/bin/access-matrix /usr/local/bin/rakkess
rm access-matrix-"$(dpkg --print-architecture)"-linux.tar.gz rakkess-"$(dpkg --print-architecture)"-linux.tar.gz
