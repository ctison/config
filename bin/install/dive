#!/bin/bash
umask 0077
shopt -s nullglob
set -euxo pipefail

VERSION=$(curl -s https://api.github.com/repos/wagoodman/dive/releases/latest | jq -r .tag_name | sed s/^v//)
curl -LO https://github.com/wagoodman/dive/releases/download/v"$VERSION"/dive_"$VERSION"_linux_"$(dpkg --print-architecture)".deb
dpkg -i dive_"$VERSION"_linux_"$(dpkg --print-architecture)".deb
chmod 500 /usr/local/bin/dive
rm dive_"$VERSION"_linux_"$(dpkg --print-architecture)".deb
