#!/bin/bash
umask 0077
shopt -s nullglob
set -euxo pipefail

VERSION=$(curl -s https://api.github.com/repos/kubernetes-sigs/kubebuilder/releases/latest | jq -r .tag_name | sed s/^v//)
curl -LO https://github.com/kubernetes-sigs/kubebuilder/releases/download/v"${VERSION}"/kubebuilder_"${VERSION}"_linux_"$(dpkg --print-architecture)".tar.gz
tar --no-same-{o,p} -C /usr/local/bin/ --strip 2 -xvf kubebuilder_"${VERSION}"_linux_"$(dpkg --print-architecture)".tar.gz kubebuilder_"${VERSION}"_linux_"$(dpkg --print-architecture)"/bin/kubebuilder
chmod 500 /usr/local/bin/kubebuilder
rm kubebuilder_"${VERSION}"_linux_"$(dpkg --print-architecture)".tar.gz
