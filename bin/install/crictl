#!/bin/bash
umask 0077
shopt -s nullglob
set -euxo pipefail

VERSION=$(curl -s https://api.github.com/repos/kubernetes-sigs/cri-tools/releases/latest | jq -r .tag_name)
curl -LO https://github.com/kubernetes-sigs/cri-tools/releases/download/"$VERSION"/crictl-"$VERSION"-linux-"$(dpkg --print-architecture)".tar.gz
tar --no-same-{o,p} -C /usr/local/bin/ -xzf crictl-"$VERSION"-linux-"$(dpkg --print-architecture)".tar.gz crictl
chmod 500 /usr/local/bin/crictl
rm crictl-"$VERSION"-linux-"$(dpkg --print-architecture)".tar.gz
