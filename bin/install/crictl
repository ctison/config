#!/bin/sh
umask 0077
VERSION='1.16.1'
set -ex

curl -LO https://github.com/kubernetes-sigs/cri-tools/releases/download/v${VERSION}/crictl-v${VERSION}-linux-amd64.tar.gz
tar --no-same-o --no-same-p -C /usr/local/bin/ -xzf crictl-v${VERSION}-linux-amd64.tar.gz crictl
chmod 500 /usr/local/bin/crictl
rm crictl-v${VERSION}-linux-amd64.tar.gz