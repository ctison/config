#!/bin/sh

set -ex
umask 0077

CRICTL_VERSION='1.16.1'

curl -LO https://github.com/kubernetes-sigs/cri-tools/releases/download/v${CRICTL_VERSION}/crictl-v${CRICTL_VERSION}-linux-amd64.tar.gz
tar --no-same-o --no-same-p -C /usr/local/bin/ -xzf crictl-v${CRICTL_VERSION}-linux-amd64.tar.gz crictl
chmod 500 /usr/local/bin/crictl
rm crictl-v${CRICTL_VERSION}-linux-amd64.tar.gz