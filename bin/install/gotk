#!/bin/bash
umask 0077
shopt -s nullglob
set -euo pipefail

VERSION=$(curl -sS https://api.github.com/repos/fluxcd/toolkit/releases/latest | jq -r .tag_name | sed s/^v//)
echo "VERSION=$VERSION"
if [ $# = 1 ] && [ "$1" = 'version' ]; then exit 0; fi
set -x
curl -LOC- https://github.com/fluxcd/toolkit/releases/download/v"$VERSION"/gotk_"$VERSION"_linux_"$(dpkg --print-architecture)".tar.gz
tar --no-same-{o,p} -C /usr/local/bin/ -xf gotk_"$VERSION"_linux_"$(dpkg --print-architecture)".tar.gz gotk
chmod 500 /usr/local/bin/gotk
rm gotk_"$VERSION"_linux_"$(dpkg --print-architecture)".tar.gz
