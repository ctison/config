#!/bin/sh

set -ex
umask 0077

NIM_VERSION='1.0.0'

curl -LO https://nim-lang.org/download/nim-${NIM_VERSION}-linux_x64.tar.xz
tar --no-same-o --no-same-p -C /usr/local/bin/ --strip=2 -xf nim-${NIM_VERSION}-linux_x64.tar.xz nim-${NIM_VERSION}/bin/
chmod 500 /usr/local/bin/*
rm nim-${NIM_VERSION}-linux_x64.tar.xz