#!/bin/bash
umask 0077
shopt -s nullglob
set -euxo pipefail

VERSION=$(curl -s https://api.github.com/repos/helm/helm/releases | jq -r 'map(select(.tag_name | test("^v3"))) | .[0].tag_name' | sed s/^v//)
curl -LO https://get.helm.sh/helm-v"$VERSION"-linux-"$(dpkg --print-architecture)".tar.gz
tar --no-same-{o,p} -xzf helm-v"$VERSION"-linux-"$(dpkg --print-architecture)".tar.gz -C /usr/local/bin/ linux-"$(dpkg --print-architecture)"/helm --strip-c=1
chmod 500 /usr/local/bin/helm
rm helm-v"$VERSION"-linux-"$(dpkg --print-architecture)".tar.gz
