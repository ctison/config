#!/bin/bash
umask 0077
shopt -s nullglob
set -euxo pipefail

VERSION=$(curl -s https://api.github.com/repos/github/hub/releases/latest | jq -r .tag_name | sed s/^v//)
curl -LO https://github.com/github/hub/releases/download/v"$VERSION"/hub-linux-"$(dpkg --print-architecture)"-"$VERSION".tgz
tar --no-same-{o,p} -xzf hub-linux-"$(dpkg --print-architecture)"-"$VERSION".tgz
hub-linux-"$(dpkg --print-architecture)"-"$VERSION"/install
rm -rf -- hub-linux-"$(dpkg --print-architecture)"-"$VERSION" hub-linux-"$(dpkg --print-architecture)"-"$VERSION".tgz
