#!/bin/bash
umask 0077
shopt -s nullglob
set -euo pipefail

VERSION=$(curl -sS https://api.github.com/repos/elastic/beats/releases/latest | jq -r .tag_name)
echo "VERSION=$VERSION"
if [ $# = 1 ] && [ "$1" = 'version' ]; then exit 0; fi
set -x
curl -fLO https://artifacts.elastic.co/downloads/beats/heartbeat/heartbeat-"${VERSION#v}"-amd64.deb
dpkg -i heartbeat-"${VERSION#v}"-amd64.deb
rm heartbeat-"${VERSION#v}"-amd64.deb