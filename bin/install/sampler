#!/bin/bash
umask 0077
shopt -s nullglob
set -euxo pipefail

VERSION=$(curl -s https://api.github.com/repos/sqshq/sampler/releases/latest | jq -r .tag_name | sed s/^v//)
curl -Lo /usr/local/bin/sampler https://github.com/sqshq/sampler/releases/download/v"$VERSION"/sampler-"$VERSION"-linux-"$(dpkg --print-architecture)"
chmod 500 /usr/local/bin/sampler
