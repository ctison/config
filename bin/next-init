#!/bin/sh
umask 0077
set -ex

if test -f package.json ; then
  echo 'Error: package.json already exists' >&2
  exit 1
fi

cat > package.json <<EOF
{
  "private": true,
  "scripts": {
    "dev": "next",
    "build": "next build",
    "start": "next start",
    "docker:build": "docker build .",
    "format": "prettier --write **/*.{js,jsx,ts,tsx,json,yaml,gql,md,html,css}",
    "lint": "eslint --ext .js,.jsx,.ts,.tsx src/",
    "build:precommit": "npm run build && echo >/dev/null"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,yaml,gql,md,html,css}": [
      "prettier --write",
      "git add"
    ],
    "src/**/*.{js,jsx,ts,tsx}": [
      "eslint --max-warnings 0"
    ],
    "*": [
      "npm run build:precommit"
    ]
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "endOfLine": "lf",
    "trailingComma": "all",
    "printWidth": 100
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/eslint-recommended",
      "plugin:@typescript-eslint/recommended",
      "prettier",
      "prettier/@typescript-eslint"
    ]
  }
}
EOF

npm i next react react-dom
npm i @material-ui/core
npm i -D typescript @types/node @types/react
npm i -D husky lint-staged prettier
npm i -D eslint @typescript-eslint/eslint-plugin @typescript-eslint/parser eslint-config-prettier

npx next telemetry disable

cat > next.config.js <<EOF
module.exports = {
  poweredByHeader: false,
}
EOF

cat > .prettierignore <<EOF
/.next/
/cache/
/node_modules/
EOF

# Next.JS will automatically populate this file
touch tsconfig.json

mkdir pages public
next-page pages/index.tsx

npm run dev