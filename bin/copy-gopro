#!/bin/bash
umask 0077
shopt -s nullglob
set -euo pipefail

if [ $# -lt 2 ] || [ $# -gt 3 ]; then
	echo "Usage: $0 GO_PRO_SD_FOLDER DEST_FOLDER [DATE]"
	exit 1
fi

displayNotification() {
	osascript <<EOF
display notification "$1" with title "ðŸŽ¥ Copy GoPro"
EOF
	echo "$1"
}

if ! test -f "$1/Get_started_with_GoPro.url"; then
	echo >&2 'Disk not recognized as GoPro disk... exiting'
	exit
fi

MOVIES="$(find "$1/DCIM" -type f -iname '*.MP4' -not -name '.*')"

echo "$MOVIES" | while IFS= read -r M; do
	DATE=$(date -r "$M" '+%Y-%m-%d %H-%M-%S')
	if [[ "$DATE" > "${3:-''}" ]]; then
		if [ "$(df -g / | tail -n1 | awk -F' ' '{print $4}')" -lt 10 ]; then
			displayNotification 'ERROR: not enough memory available  ðŸ’¾'
			exit 1
		fi
		NAME="$2/$DATE.MP4"
		printf '%s -> %s ' "$M" "$NAME"
		if test -f "$NAME"; then
			echo SKIP
			continue
		elif cp -n -- "$M" "$NAME"; then
			echo OK
		else
			echo KO
			continue
		fi
		chmod 0400 "$NAME"
	fi
done

diskutil reformat "$1"
diskutil eject "$1"

displayNotification 'Finished successfuly ðŸš€'
