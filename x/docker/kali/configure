#!/bin/bash
umask 0077
set -euxo pipefail
shopt -s nullglob

rm -rf -- /etc/fish
ln -s /config/x/fish /etc/fish
chsh -s /usr/bin/fish
useradd -D -s /usr/bin/fish
fish -c fish_update_completions

ln -fs /config/x/bash/bash.bashrc /etc/bash.bashrc
ln -fs /config/x/tmux/tmux.conf /etc/tmux.conf
ln -fs /config/x/vim/vimrc /etc/vim/vimrc

rm -rf -- /etc/skel && mkdir /etc/skel