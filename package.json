{
  "private": true,
  "scripts": {
    "format": "prettier --write .",
    "kali": "docker build -t ctison/kali .",
    "prepare": "husky install"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,yaml,yml,gql,md,html,css}": [
      "prettier --write"
    ]
  },
  "prettier": {
    "jsxSingleQuote": true,
    "semi": false,
    "singleQuote": true
  },
  "renovate": {
    "extends": [
      "github>ctison/renovate"
    ],
    "requiredStatusChecks": null
  },
  "devDependencies": {
    "husky": "8.0.3",
    "lint-staged": "13.1.0",
    "prettier": "2.8.3"
  },
  "packageManager": "pnpm@7.25.1"
}
