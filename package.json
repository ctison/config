{
  "private": true,
  "scripts": {
    "ubuntu": "docker build -t ctison/ubuntu --target ubuntu .",
    "kali": "docker build -t ctison/kali --target kali .",
    "format": "prettier --write '**/*.{js,jsx,ts,tsx,json,yaml,gql,md,html,css}'"
  },
  "devDependencies": {
    "husky": "4.3.0",
    "lint-staged": "10.5.2",
    "prettier": "2.1.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,yaml,gql,md,html,css}": [
      "prettier --write"
    ]
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "jsxSingleQuote": true
  },
  "renovate": {
    "extends": [
      "github>ctison/renovate-config"
    ],
    "automerge": true,
    "requiredStatusChecks": null
  }
}
