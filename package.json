{
  "name": "@ctison/config",
  "version": "0.0.0",
  "type": "module",
  "files": [
    "typescript/*"
  ],
  "scripts": {
    "format": "prettier --write . ; sort-package-json",
    "format:check": "prettier --check . ; sort-package-json --check",
    "image": "docker buildx bake --load",
    "prepare": "husky",
    "update": "bun x npm-check-updates -ui"
  },
  "lint-staged": {
    "package.json": "sort-package-json",
    "*.{js,jsx,ts,tsx,json,yaml,yml,gql,md,html,css}": "prettier --write"
  },
  "prettier": {
    "jsxSingleQuote": true,
    "singleQuote": true
  },
  "devDependencies": {
    "@types/bun": "1.1.16",
    "husky": "9.1.7",
    "lint-staged": "15.3.0",
    "prettier": "3.4.2",
    "sort-package-json": "2.12.0",
    "typescript": "5.7.3"
  }
}
